@using HRMaster_MVC_Project.Models.ViewModels
@model ForgotPasswordVM
@{
    Layout = "_ForgotPasswordLayout";
}
<div class="login-box">
    <div class="login-logo">
        <a asp-action="Index" asp-controller="Home"><b>Hero</b>Resources</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Şifrenizi mi unuttunuz? Buradan kolayca yeni bir şifre alabilirsiniz.</p>

            <form asp-action="ForgotPassword" method="post">
                <div class="input-group mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Yeni Şifre İsteği</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <div class="col text-center mt-3">
                <a asp-action="Login" asp-controller="Login">Giriş yap</a>
            </div>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>