@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout="_LoginLayout";
}

<div class="row justify-content-center" style="margin-top: 50px;">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-bullhorn"></i>
                    Bilgilendirme mesajı
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="callout callout-info">
                    <h5>Şifre Güncelleme</h5>
                    <p>Şifre güncelleme linkiniz e-mail olarak gönderilmiştir. Yeni şifrenizi oluşturmak için lütfen mailinizdeki bağlantı linkine tıklayın.</p>
                </div>
                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Login" class="btn btn-primary">Login Sayfasına Git</a>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
