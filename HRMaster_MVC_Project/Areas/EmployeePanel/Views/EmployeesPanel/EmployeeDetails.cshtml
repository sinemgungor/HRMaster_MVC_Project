@using HRMaster_MVC_Project.Areas.EmployeePanel.Models.ViewModels
@model EmployeeDetailsVM


<section class="content">
    <!-- Default box -->
    <div class="card-body pb-0">
        <div class="row d-flex align-items-stretch">
            <div class="col-lg-12 col-sm-12 col-md-12 d-flex justify-content-center">
                <div class="card bg-light" style="width: 100%; max-width: 600px; margin: auto;">
                    <div class="card-header text-muted border-bottom-0" style="display: flex; justify-content: center; padding: 10px 0;">
                        <img src="@(!string.IsNullOrEmpty(Model.PicturePath) ? $"/Photos/{Model.PicturePath}" : "/Photos/default.png")" 
                             alt="Profile Picture" 
                             class="img-circle img-fluid" 
                             style="width: 120px; height: 120px; object-fit: cover; margin-top:10px">
                    </div>
                    <div class="card-body pt-0" style="padding: 20px; text-align: left;">
                        <h2 class="lead"><b>@Model.Name @Model.SecondName @Model.Surname @Model.SecondSurname</b></h2>
                        <p class="text-muted text-sm"><b>Doğum Tarihi: </b> @Model.BirthDate?.ToString("d") </p>
                        <p class="text-muted text-sm"><b>Doğum Yeri: </b> @Model.BirthState </p>
                        <p class="text-muted text-sm"><b>Kimlik Numarası: </b> @Model.IdentityNumber </p>
                        <p class="text-muted text-sm"><b>İşe Giriş Tarihi: </b> @Model.HireDate?.ToString("d") </p>
                        <p class="text-muted text-sm"><b>Email: </b> @Model.Email </p>
                        <p class="text-muted text-sm"><b>Meslek: </b> @Model.Job </p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Adres: @Model.Address</li>
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon: @Model.PhoneNumber</li>
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Şirket: @Model.Company.CompanyName</li>
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-briefcase"></i></span> Departman: @Model.Department?.DepartmentName</li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a asp-action="Index" asp-area="EmployeePanel" asp-controller="EmployeesPanel" class="btn btn-sm btn-primary"> Profile Geri Dön</a>
                            <a asp-action="UpdateEmployee" asp-area="EmployeePanel" asp-controller="EmployeesPanel" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
