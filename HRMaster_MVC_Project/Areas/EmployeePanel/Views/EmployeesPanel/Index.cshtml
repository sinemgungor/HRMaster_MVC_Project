@using HRMaster_MVC_Project.Areas.EmployeePanel.Models.ViewModels

@model EmplyoeeSumVM


<section class="content">
    @if (TempData["Message"] is not null)
    {
        <div class="row col-9">
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-check"></i> Alert!</h5>
                @TempData["Message"]
            </div>
        </div>
    }
    @if (TempData["UpdMessage"] is not null)
    {
        <div class="row col-9">
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-check"></i> İşlem Başarılı!</h5>
                <p>@TempData["UpdMessage"]</p>
            </div>
        </div>
    }
    <div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-md-8">  
            <div class="card card-primary">
            <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="img-circle img-fluid"
                                 style="width: 120px; height: 120px; object-fit: cover; margin-top: 10px;"
                                 src="~/Photos/@Model.PicturePath"
                                 alt="Employee profile picture">

                            <h3 class="profile-username mt-3">@Model.Name @Model.Surname</h3>
                            <p class="text-muted mb-3">@Model.Job</p>

                            <ul class="list-group list-group-flush text-left">
                                <li class="list-group-item">
                                    <b>Adres</b> <a class="float-right">@Model.Address</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Email</b> <a class="float-right">@Model.Email</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Telefon</b> <a class="float-right">@Model.PhoneNumber</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Departman</b> <a class="float-right">@Model.Department?.DepartmentName</a>
                                </li>
                            </ul>

                            <a asp-action="EmployeeDetails" asp-controller="EmployeesPanel" asp-area="EmployeePanel" class="btn btn-primary btn-block mt-3"><b>Detay</b></a>
                        </div>


            </div>    
            
            
            </div>



        </div>


    </div>    
    
    
    </div>




</section>



