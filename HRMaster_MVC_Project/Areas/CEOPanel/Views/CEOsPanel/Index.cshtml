                                    <b>Adres</b> <a class="float-right"> @Model.ManagerSumInfo.Address</a>
                            </li>
                            <li class="list-group-item">
                                    <b>Email</b> <a class="float-right">@Model.ManagerSumInfo.Email</a>
                            </li>
                            <li class="list-group-item">
