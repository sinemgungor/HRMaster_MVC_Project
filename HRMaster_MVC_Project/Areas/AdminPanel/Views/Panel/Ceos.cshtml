@using HRMaster_MVC_Project.Areas.AdminPanel.Models.AdminViewModels

@model List<ManagerListVM>


<div class="card-body pb-0">
    <div class="row d-flex align-items-stretch">
        @foreach (var manager in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                <div class="card bg-light" style="width: 24rem; height: 20rem;">
                    <div class="card-header text-muted border-bottom-0">
                        @manager.Job
                    </div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-7">
                                <h2 class="lead"><b>@manager.Name @manager.Surname</b></h2>
                            
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-address-book"></i></span> Adres: @manager.Address</li>
                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon #: @manager.PhoneNumber</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Şirket: @manager.CompanyName</li>
                                </ul>
                            </div>
                            <div class="col-5 text-center">
                                <img src="/Photos/@manager.PicturePath" alt="Manager Image" class="img-circle img-fluid"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
