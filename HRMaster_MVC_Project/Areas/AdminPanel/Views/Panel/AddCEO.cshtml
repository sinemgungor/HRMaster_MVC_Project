@using HRMaster_MVC_Project.Areas.AdminPanel.Models.AdminViewModels
@using HRMaster_MVC_Project.Models.Enums



@model AddCEOVM

@section Styles {
    <link rel="stylesheet" href="~/css/AdminStyle.css" />
}


@if (ViewData["ErrorAddManager"]!=null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-ban"></i> Uyarı!</h5>
        @ViewData["ErrorAddManager"]
    </div>
}


<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">YENİ YÖNETİCİ EKLE</h2>
            <form asp-action="AddCEO" method="post" enctype="multipart/form-data">
             <div asp-validation-summary="All" lang="tr" class="text-danger"></div>
                <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Adı</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" placeholder="Adı" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="SecondName" for="SecondName" class="form-label">İkinci Adı</label>
                    <input asp-for="SecondName" type="text" class="form-control" id="SecondName" placeholder="İkinci Adı" name="SecondName">
                        <span asp-validation-for="SecondName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Surname" class="form-label">Soyadı</label>
                    <input asp-for="Surname" type="text" class="form-control" id="Surname" placeholder="Soyadı" name="Surname" required>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="SecondSurname" class="form-label">İkinci Soyadı</label>
                    <input asp-for="SecondSurname" type="text" class="form-control" id="SecondSurname" placeholder="İkinci Soyadı" name="SecondSurname">
                        <span asp-validation-for="SecondSurname" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PicturePath" class="form-label">Profile Fotoğrafı</label>
                        <input asp-for="PicturePath" type="file" class="form-control" id="PicturePath" placeholder="Profile Fotoğrafı" name="PicturePath">
                        <span asp-validation-for="PicturePath" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="BirthDate" class="form-label">Doğum Tarihi</label>
                    <input asp-for="BirthDate" class="form-control" id="BirthDate" type="date" placeholder="Doğum Tarihi" name="BirthDate" required>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="BirthState" class="form-label">Doğum Yeri</label>
                    <input asp-for="BirthState" type="text" class="form-control" id="BirthState" placeholder="Doğum Yeri" name="BirthState" required>
                        <span asp-validation-for="BirthState" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="IdentityNumber" class="form-label">TC Kimlik Numarası</label>
                    <input asp-for="IdentityNumber" type="text" class="form-control" id="IdentityNumber" placeholder="TC Kimlik Numarası" name="IdentityNumber" required>
                        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="HireDate" class="form-label">İşe Başlama Tarihi</label>
                    <input asp-for="HireDate" type="date" class="form-control" id="HireDate" placeholder="İşe Başlama Tarihi" name="HireDate" required>
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Job" class="form-label">Meslek</label>
                    <input asp-for="Job" type="text" class="form-control" id="Job" placeholder="Meslek" name="Job" required>
                        <span asp-validation-for="Job" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Address" class="form-label">Adres</label>
                    <input asp-for="Address" type="text" class="form-control" id="Address" placeholder="Adres" name="Address" required>
                        <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Salary" class="form-label">Maaş</label>
                    <input asp-for="Salary" type="number" step="0.01" class="form-control" placeholder="Maaş" id="Salary" name="Salary" required>
                        <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Title" class="form-label">Ünvan</label>
                    <input asp-for="Title" type="text" class="form-control" id="Title" placeholder="Ünvan" name="Title" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Gender" class="form-label">Cinsiyet</label>
                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MarialStatus" class="form-label">Medeni Durum</label>
                    <select asp-for="MarialStatus" class="form-control" asp-items="Html.GetEnumSelectList<MarialStatus>()"></select>
                        <span asp-validation-for="MarialStatus" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="BloodGroup" class="form-label">Kan Grubu</label>
                    <select asp-for="BloodGroup" class="form-control" asp-items="Html.GetEnumSelectList<BloodGroup>()"></select>
                        <span asp-validation-for="BloodGroup" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Companies" class="form-label">Çalıştığı Şirket</label>
                    <select class="form-control" id="Companies" name="SelectedCompanyID" asp-items="Model.Companies" required>
                        <option value="">Şirket Seçiniz</option>
                    </select>
                        <span asp-validation-for="Companies" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email" name="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" id="PhoneNumber" placeholder="Telefon Numarası" name="PhoneNumber" required>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                </div>
                <button type="submit" class="btn btn-outline-success w-100">Ekle</button>
            </form>
        </div>
    </div>
</div>

<script src="~/js/date.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
